partition generatePath2D {
	start
	:_radius: number = 10]
	:path2d = new Path2D();
	:add arc around the position
	with the _radius;
	:close path;
	stop
}

partition move {
	:_delta: Vector2 = 0]
	:x += _delta.x;
	:y += _delta.y;
	stop
}

partition moveTo {
	:_newPos: Vector2]
	:x = _newPos.x
	y = _newPos.y;
	stop
}
